@model TaskManagementSystem.Models.ViewModels.EditCommentVm
@{
    ViewBag.Title = "Edit";
}

<h2>Edit Comment</h2>

<h3>@Model.CommentDescription</h3>
<form method="post">
    <input type="number" hidden="hidden" name="Id" value="@Model.Id" />
    <div class="form-group">
        @Html.LabelFor(vm => vm.CommentDescription, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(vm => vm.CommentDescription, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(vm => vm.CommentType, htmlAttributes: new { @class = "control-label" })
        @Html.EnumDropDownListFor(model => model.CommentType, htmlAttributes: new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(vm => vm.ReminderDate, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(vm => vm.ReminderDate, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-default" />
    </div>
</form>
